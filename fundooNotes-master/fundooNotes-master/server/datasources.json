{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "mongoDB": {
    "host": "${MONGO_DATABASE_HOST}",
    "port": 27017,
    "url": "",
    "database": "${MONGO_DATABASE_NAME}",
    "password": "${MONGO_DATABASE_PASSWORD}",
    "name": "mongoDB",
    "user": "${MONGO_DATABASE_USERNAME}",
    "connector": "mongodb"
  },
  "storage": {
    "name": "storage",
    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "./client"
  },
  "mailer": {
    "name": "mailer",
    "connector": "mail",
    "transports": [
      {
        "type": "smtp",
        "host": "${SENDER_EMAIL_HOST}",
        "secure": true,
        "port": "${SENDER_EMAIL_PORT}",
        "auth": {
          "user": "${SENDER_EMAIL_ID}",
          "pass": "${SENDER_EMAIL_PASSWORD}"
        }
      }
    ]
  }
}
